alias cmon="consul monitor"
alias crl="consul reload"
alias crs="sudo systemctl restart consul.service"
alias cst="sudo systemctl status consul.service"
alias ctmon="consul-template monitor"
alias ctrl="consul-template reload"
alias ctrs="sudo systemctl restart consul-template.service"
alias ctst="sudo systemctl status consul-template.service"
alias ndr="nomad node drain -self -enable"
alias nrl="sudo systemctl reload nomad.service"
alias nrs="sudo systemctl restart nomad.service"
alias nst="sudo systemctl status nomad.service"
alias nudr="nomad node drain -self -disable"
alias vou="sudo -u vault vault operator unseal"
alias vrs="sudo systemctl restart vault.service"
alias vst="sudo -u vault vault status"
alias vsyst="sudo systemctl status vault.service"